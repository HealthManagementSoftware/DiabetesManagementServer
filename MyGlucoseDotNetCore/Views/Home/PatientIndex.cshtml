@model IEnumerable<MyGlucoseDotNetCore.Models.ViewModels.PatientViewModel>

@{
    ViewData["Title"] = "Patient List";
}

<h2>PatientIndex</h2>

<p>
    <a asp-action="CreatePatient" asp-controller="Home">Add new Patient</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    Manage
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no patients to display.</p>
}
<a asp-action="Index" asp-controller="Home">Home</a>