@model IEnumerable<PatientViewModel>

@{
    ViewData["Title"] = "Patient List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-controller="Patient">Create new Patient</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Manage
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Patient" asp-route-UserName="@item.UserName">Details</a> | 
                    <a asp-action="Edit" asp-controller="Patient" asp-route-UserName="@item.UserName">Edit</a> | 
                    <a asp-action="Delete" asp-controller="Patient" asp-route-UserName="@item.UserName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Home">Home</a>
